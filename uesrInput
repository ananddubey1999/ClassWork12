#include <stdio.h>

void findSubarray(int arr[], int size, int targetSum) {
    for (int i = 0; i < size; i++) {
        int currentSum = 0;
        for (int j = i; j < size; j++) {
            currentSum += arr[j];
            if (currentSum == targetSum) {
                printf("Sum found between indexes %d and %d\n", i, j);
                return;
            }
        }
    }
    printf("No subarray found with the given sum\n");
}

int main() {
    int size, targetSum;

    printf("Enter the size of the array: ");
    scanf("%d", &size);

    int arr[size];

    printf("Enter the elements of the array: ");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the sum to find: ");
    scanf("%d", &targetSum);

    findSubarray(arr, size, targetSum);

    return 0;
}
